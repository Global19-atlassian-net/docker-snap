#!/bin/bash

. $SNAP/bin/settings

echo -e "#!/bin/sh\n" > $custom_settings
for key in ${keys[@]}
do
  key_name="key_$key"
  if value=$(snapctl get ${!key_name}); then
      echo "export $key='$value'" >> $custom_settings
  elif [ -d "${!key}" ]; then
      echo "export $key='${!key}'" >> $custom_settings
  fi
done

chmod 755 $custom_settings
